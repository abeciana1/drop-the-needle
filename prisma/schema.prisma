generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DEV_DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String @unique
  hosted       Host[]
  participants Participant[]
  invites Invite[]
}

model Host {
  id          Int       @id @default(autoincrement())
  userId      Int
  powerHourId Int
  powerHour   PowerHour @relation(fields: [powerHourId], references: [id])
  user        User      @relation(fields: [userId], references: [id])
}

model Participant {
  id          Int       @id @default(autoincrement())
  userId      Int
  powerHourId Int
  powerHour   PowerHour @relation(fields: [powerHourId], references: [id])
  user        User      @relation(fields: [userId], references: [id])
  PowerHourSongs PowerHourSong[]
}

model PowerHour {
  id             Int              @id @default(autoincrement())
  title          String
  description    String
  cover_image    String
  date_time      DateTime
  createdAt      DateTime         @default(now())
  privateStatus Boolean @default(false)
  publishStatus Boolean @default(false)
  songLimit Int @default(5)
  submissionDeadline DateTime @default(now())
  inviteToken String @default("") @unique
  hosts          Host[]
  participants   Participant[]
  PowerHourSongs PowerHourSong[]
  invites Invite[]
  @@map("powerHours")
}

model PowerHourSong {
  id          Int       @id @default(autoincrement())
  title       String
  artist      String
  youtubeLink String
  startTime   String
  endTime     String
  album String @default("")
  year String @default("")
  powerHourId Int
  orderNumber Int @default(0)
  createdAt   DateTime  @default(now())
  powerHour  PowerHour @relation(fields: [powerHourId], references: [id])
  participantId Int
  participant Participant @relation(fields: [participantId], references: [id])
}

model Invite {
  id          Int       @id @default(autoincrement())
  rsvpYes Boolean @default(false)
  rsvpNo Boolean @default(false)
  rsvpMaybe Boolean @default(false)
  userId      Int
  powerHourId Int
  powerHour   PowerHour @relation(fields: [powerHourId], references: [id])
  user        User      @relation(fields: [userId], references: [id])
}